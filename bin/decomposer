#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$( dirname "$0" )/../lib/decomposer/general.sh"

if [ -z "$1" ]; then
  exit_error 'Missing command'
fi

COMMAND="$1"
shift

if [ "${COMMAND}" = 'help' ]; then
  if [ -z "$1" ]; then
    man decomposer
  else
    man "decomposer-$1"
  fi
  exit
fi

COMMAND_FILE="$( dirname "$0" )/../libexec/decomposer/decomposer-${COMMAND}"

if [ ! -f "${COMMAND_FILE}" ]; then
  exit_error "Invalid command '${COMMAND}'"
fi

exec "${COMMAND_FILE}" "$@"
